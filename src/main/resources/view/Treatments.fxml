<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextField?>
<VBox xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TreatmentsController">
    <HBox alignment="CENTER_RIGHT" prefHeight="25.0">
        <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </VBox.margin>
        <Button mnemonicParsing="false" onAction="#newTreatment" text="Agregar">
            <HBox.margin>
                <Insets left="5.0"/>
            </HBox.margin>
        </Button>
        <Region HBox.hgrow="ALWAYS"/>
        <TextField fx:id="searchField" promptText="Buscar" />
    </HBox>
    <TableView fx:id="treatmentsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nameColumn" minWidth="120" text="Nombre"/>
            <TableColumn fx:id="descriptionColumn" minWidth="200" text="DescripciÃ³n"/>
            <TableColumn fx:id="editColumn" maxWidth="145" minWidth="145"/>
            <TableColumn fx:id="deleteColumn" maxWidth="145" minWidth="145"/>
        </columns>
    </TableView>
</VBox>
